# St. Louis 311+ Environment Configuration
# Copy this file to .env and update values as needed

# St. Louis 311 API Configuration
STL311_API_KEY=your_api_key_here

# Database Configuration (for Docker Compose)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=stl311_db
DB_USER=postgres
DB_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@postgres:5432/stl311_db

# GeoServer Configuration
GEOSERVER_URL=http://geoserver:8080/geoserver
GEOSERVER_USERNAME=admin
GEOSERVER_PASSWORD=geoserver
GEOSERVER_WORKSPACE=stl311
GEOSERVER_NAMESPACE=http://stl311.org

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production

# Scheduler Configuration
DAILY_SYNC_TIME=02:00
CLEANUP_TIME=03:00
SCHEDULER_AUTO_START=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/stl311.log
